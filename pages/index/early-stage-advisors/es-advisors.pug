section#team.text-center
  .pure-g.bg-lighter.grid-item
    .pure-u-1
        .pure-g.heading
          .pure-u-1
            h2= __(strings.EARLY_STAGE_ADVISORS)
            //- h4.sub-header!= __(strings.TEAM_P1)

    .pure-g.text-center
      each member in earlyStageAdvisors.members
        .pure-u-1.pure-u-sm-1.pure-u-md-12-24.pure-u-lg-8-24.pure-u-xl-8-24
          .member.text-left
            .info
              img(src=member.img, alt=__(member.name))
              .basic
                .name= __(member.name)
                .position!= __(member.position)
                .member-links
                  ul
                    each link in member.links
                      li
                        a(href=link.link, target="_blank")
                          .icon(class=link.icon)
            .description= __(member.description)

section.text-center
   .pure-g.bg-lighter.grid-item
    .pure-u-1
        .pure-g.heading
          .pure-u-1
            h2
              a(href="/about")= __("Team")

